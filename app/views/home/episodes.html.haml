.container
  .jumbotron
    %h2= @series_data['seriesName']
    %p= @series_data['overview']
    .row
      .col-lg-6
        %div 
          %strong Genre:
        %div= @series_data['genre'].join(', ')
      .col-lg-6
        - if @in_favorites
          = link_to 'Remove from Favorites', remove_from_favorites_path(@series_data['id']), remote: true, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'
        - else
          = link_to 'Add to Favorites', add_to_favorites_path(@series_data['id']), remote: true, method: :post, class: 'btn btn-success'

  .row
    %h3 Episodes
  .row
    .panel-group
      - @seasons.each do |season, episodes|
        .panel-default.panel
          .panel-heading
            %h4= link_to "Season #{season}", "#season#{season}", data: {toggle: 'collapse'}
          .panel-collapse.collapse{id: "season#{season}"}
            .panel-body
              - episodes.each do |episode|
                = render 'episode', episode: episode